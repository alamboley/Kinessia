package pages {	import com.gaiaframework.api.IBitmap;	import com.gaiaframework.templates.AbstractPage;	import com.greensock.TweenMax;	import flash.display.Bitmap;	import flash.events.Event;	public class HowToPlayPage extends AbstractPage {				private var _background:Bitmap;		public function HowToPlayPage() {			super();			alpha = 0;		}		override public function transitionIn():void {			super.transitionIn();			TweenMax.to(this, 0.3, {alpha:1, onComplete:transitionInComplete});						_background = new Bitmap(IBitmap(assets.imgHowToPlay).bitmapData);			_background.x = (stage.stageWidth - _background.width) / 2;			addChild(_background);						stage.addEventListener(Event.RESIZE, _onResize);		}				private function _onResize(evt:Event):void {						_background.x = (stage.stageWidth - _background.width) / 2;		}		override public function transitionOut():void {			stage.removeEventListener(Event.RESIZE, _onResize);			super.transitionOut();			TweenMax.to(this, 0.3, {alpha:0, onComplete:transitionOutComplete});		}	}}